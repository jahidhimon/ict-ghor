<main class="bg-zinc-900 text-zinc-100">
  <!-- Hero Section -->
  <section class="max-w-7xl mx-auto px-4 py-20 text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      <%= t("home.master.title") %>
      <span class="bg-gradient-to-r from-blue-400 to-green-400 bg-clip-text text-transparent">
        <%= t("home.master.title_highlight") %>
      </span>
    </h1>
    <p class="text-xl md:text-2xl text-zinc-300 mb-8 max-w-3xl mx-auto">
      <%= t("home.master.subtitle") %>
    </p>
    <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 cursor-pointer">
      <%= t("home.master.button") %>
    </button>
  </section>

  <!-- Features Grid -->
  <section class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-3 gap-12">
      <div class="bg-zinc-800 p-8 rounded-xl hover:border-blue-500 border-2 border-zinc-700 transition-all">
        <div class="w-16 h-16 bg-blue-900/30 rounded-lg mb-6 flex items-center justify-center">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-4"><%= t("home.cards.first.title") %></h3>
        <p class="text-zinc-400"><%= t("home.cards.first.description") %></p>
      </div>

      <div class="bg-zinc-800 p-8 rounded-xl hover:border-green-500 border-2 border-zinc-700 transition-all">
        <div class="w-16 h-16 bg-green-900/30 rounded-lg mb-6 flex items-center justify-center">
          <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-4"><%= t("home.cards.second.title") %></h3>
        <p class="text-zinc-400"><%= t("home.cards.second.description") %></p>
      </div>

      <div class="bg-zinc-800 p-8 rounded-xl hover:border-purple-500 border-2 border-zinc-700 transition-all">
        <div class="w-16 h-16 bg-purple-900/30 rounded-lg mb-6 flex items-center justify-center">
          <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-4"><%= t("home.cards.third.title") %></h3>
        <p class="text-zinc-400"><%= t("home.cards.third.description") %></p>
      </div>
    </div>
  </section>

  <!-- Interactive Demo -->
  <section class="bg-zinc-800/50 py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="rounded-xl overflow-hidden border-2 border-zinc-700">
          <!-- Placeholder for interactive animation -->
          <div class="bg-zinc-900 aspect-video flex items-center justify-center">
            <span class="text-zinc-600">Animation Preview</span>
          </div>
        </div>
        <div>
          <h2 class="text-3xl font-bold mb-6"><%= t("home.animation_preview.title") %></h2>
          <p class="text-zinc-400 mb-8">
          <span><%= t("home.animation_preview.description") %></span>
          <ul class="space-y-4 text-zinc-300">
            <li class="flex items-center">
              <div class="w-6 h-6 bg-blue-500 rounded-full mr-3 flex items-center justify-center">✓</div>
              <%= t("home.animation_preview.bullet_points.first") %>
            </li>
            <li class="flex items-center">
              <div class="w-6 h-6 bg-green-500 rounded-full mr-3 flex items-center justify-center">✓</div>
              <%= t("home.animation_preview.bullet_points.second") %>
            </li>
            <li class="flex items-center">
              <div class="w-6 h-6 bg-purple-500 rounded-full mr-3 flex items-center justify-center">✓</div>
              <%= t("home.animation_preview.bullet_points.third") %>
            </li>
          </ul>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="max-w-7xl mx-auto px-4 py-20 text-center">
    <div class="bg-gradient-to-br from-zinc-800 to-zinc-900 rounded-2xl p-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-6"><%= t("home.ict_journey.title") %></h2>
      <p class="text-zinc-300 mb-8 max-w-2xl mx-auto"><%= t("home.ict_journey.description") %></p>
      <div class="flex flex-col md:flex-row justify-center gap-4">
        <button class="bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-lg font-semibold transition-colors"><%= t("home.ict_journey.buttons.first") %></button>
        <button class="border-2 border-zinc-600 hover:border-blue-500 px-8 py-4 rounded-lg font-semibold transition-colors"><%= t("home.ict_journey.buttons.second") %></button>
      </div>
    </div>
  </section>
</main>
