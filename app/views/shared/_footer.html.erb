<footer class="bg-zinc-800 text-zinc-100 mt-16">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About Section -->
      <div class="space-y-4">
        <h3 class="text-xl font-bold mb-4"><%= t("footer.about.title") %></h3>
        <p class="text-zinc-300 text-sm leading-relaxed">
          <%= t("footer.about.description") %>
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4"><%= t("footer.quick_links.title") %></h4>
        <ul class="space-y-2 text-zinc-300">
          <li><%= link_to t("footer.quick_links.home"), root_path, class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.quick_links.chapters"), chapters_path, class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.quick_links.resources"), "#", class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.quick_links.privacy"), "#", class: "hover:text-blue-400 transition-colors" %></li>
        </ul>
      </div>

      <!-- Syllabus -->
      <div>
        <h4 class="text-lg font-semibold mb-4"><%= t("footer.syllabus.title") %></h4>
        <ul class="space-y-2 text-zinc-300">
          <li><%= link_to t("footer.syllabus.hsc_2025"), "#", class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.syllabus.model_questions"), "#", class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.syllabus.practical_guides"), "#", class: "hover:text-blue-400 transition-colors" %></li>
          <li><%= link_to t("footer.syllabus.previous_questions"), "#", class: "hover:text-blue-400 transition-colors" %></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4"><%= t("footer.contact.title") %></h4>
        <div class="space-y-2 text-zinc-300">
          <p><%= t("footer.contact.address") %></p>
          <p><%= t("footer.contact.country") %></p>
          <p><%= t("footer.contact.email") %></p>
          <p><%= t("footer.contact.phone") %></p>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <hr class="border-zinc-700 my-8" />

    <!-- Bottom Section -->
    <div class="md:flex md:items-center md:justify-between text-center">
      <!-- Copyright -->
      <div class="text-zinc-400 text-sm">
        <%= t("footer.copyright") %>
      </div>

      <!-- Social Links -->
      <div class="flex justify-center space-x-6 mt-4 md:mt-0">
        <a href="#" class="text-zinc-300 hover:text-blue-400">
          <span class="sr-only"><%= t("footer.social.facebook") %></span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
          </svg>
        </a>

        <a href="#" class="text-zinc-300 hover:text-blue-400">
          <span class="sr-only"><%= t("footer.social.twitter") %></span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
          </svg>
        </a>

        <a href="#" class="text-zinc-300 hover:text-blue-400">
          <span class="sr-only"><%= t("footer.social.youtube") %></span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Back to Top Button -->
  <button id="backToTop" class="hidden fixed bottom-8 right-8 p-3 bg-zinc-700 rounded-full shadow-lg hover:bg-blue-600 transition-colors">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
    </svg>
  </button>
</footer>
